{
  "name": "gvdp.be",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:11ty": "eleventy --pathprefix=/gvdp/",
    "build:css": "tailwindcss -i styles/app.css -o _site/assets/css/tailwind.css --postcss",
    "dev:11ty": "eleventy --serve",
    "dev:css": "tailwindcss -i styles/app.css -o _site/assets/css/tailwind.css --watch --postcss",
    "lint": "concurrently -n lint \"pnpm:lint:*(!fix)\"",
    "lint:fix": "concurrently -n lint-fix \"pnpm:lint:*:fix\"",
    "lint:format": "prettier --check .",
    "lint:format:fix": "prettier --write .",
    "lint:js": "eslint . --cache",
    "prepare": "husky",
    "start": "concurrently \"pnpm:dev:*\""
  },
  "dependencies": {
    "@11ty/eleventy": "3.1.2",
    "@tailwindcss/postcss": "4.1.14",
    "animejs": "4.0.2",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.14"
  },
  "packageManager": "pnpm@9.5.0",
  "volta": {
    "node": "22.16.0",
    "pnpm": "9.5.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.14",
    "@tailwindcss/typography": "0.5.19",
    "@types/node": "22.15.21",
    "concurrently": "9.2.1",
    "eslint": "9.37.0",
    "eslint-plugin-import": "2.32.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "prettier": "3.6.2"
  },
  "type": "module",
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
